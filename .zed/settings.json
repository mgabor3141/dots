{
  "file_types": {
    "JSON": ["**/*.json.tmpl"],
    "JSONC": ["**/*.jsonc.tmpl"],
    "TOML": ["**/*.toml.tmpl"],
    "Shell Script": [
      "**/dot_*profile.tmpl",
      "**/*.sh.tmpl",
      "**/modify_*.plist",
    ],
    "XML": ["**/*.plist.tmpl"],
  },
  "languages": {
    "XML": {
      "format_on_save": "off",
    },
  },
  "lsp": {
    "json-language-server": {
      "settings": {
        "json": {
          "schemas": [
            {
              "fileMatch": ["**/zed/*settings.json*", "**/zed/*keymap.json*"],
              "schema": {
                "allowComments": true,
              },
            },
          ],
        },
      },
    },
  },
}
