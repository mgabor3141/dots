// Project tasks configuration. See https://zed.dev/docs/tasks for documentation.
[
  {
    "label": "diff",
    "command": "chezmoi diff",
    "show_command": false,
  },
  {
    "label": "diff $ZED_FILENAME",
    "command": "chezmoi diff --source-path $ZED_FILE",
    "show_command": false,
  },
  {
    "label": "apply",
    "command": "chezmoi apply",
    "hide": "on_success",
  },
  {
    "label": "apply $ZED_FILENAME",
    "command": "chezmoi apply --source-path $ZED_FILE",
    "hide": "on_success",
  },
  {
    "label": "apply $ZED_RELATIVE_DIR",
    "command": "find $ZED_DIRNAME -type f -exec sh -c 'chezmoi apply --source-path \"$1\" || true' _ {} \\;",
    "hide": "on_success",
  },
  {
    "label": "update",
    "command": "chezmoi update",
    "show_command": false,
  },
  {
    "label": "re-add",
    "command": "chezmoi re-add",
    "show_command": false,
    "hide": "on_success",
  },
  {
    "label": "re-add $ZED_FILENAME",
    "command": "chezmoi re-add --source-path $ZED_FILE",
    "show_command": false,
  },
]
