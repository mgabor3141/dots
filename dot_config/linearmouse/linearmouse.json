{
  "$schema": "https:\/\/schema.linearmouse.app\/0.10.2",
  "schemes": [
    {
      "if": {
        "device": {
          "category": "mouse"
        }
      },
      "buttons": {
        "mappings": [
          {
            "action": {
              "run": "\/opt\/homebrew\/bin\/aerospace focus left"
            },
            "scroll": "up",
            "control": true,
            "option": true,
            "command": false,
            "shift": true
          },
          {
            "action": {
              "run": "\/opt\/homebrew\/bin\/aerospace focus right"
            },
            "scroll": "down",
            "control": true,
            "option": true,
            "command": false,
            "shift": true
          },

          {
            "action": {
              "run": "\/opt\/homebrew\/bin\/aerospace move left --boundaries-action stop"
            },
            "scroll": "up",
            "control": true,
            "option": true,
            "command": true,
            "shift": true
          },
          {
            "action": {
              "run": "\/opt\/homebrew\/bin\/aerospace move right --boundaries-action stop"
            },
            "scroll": "down",
            "control": true,
            "option": true,
            "command": true,
            "shift": true
          }
        ]
      },
      "pointer": {
        "acceleration": 0.5,
        "disableAcceleration": true,
        "redirectsToScroll": false,
        "speed": "unset"
      },
      "scrolling": {
        "acceleration": {
          "vertical": 1
        },
        "distance": {
          "vertical": 5
        },
        "reverse": {
          "vertical": true
        },
        "speed": {
          "vertical": 0
        }
      }
    },
    {
      "if": {
        "device": {
          "category": "mouse",
          "productID": "0xc08b",
          "vendorID": "0x46d"
        }
      },
      "pointer": {
        "acceleration": 0.55
      }
    }
  ]
}
