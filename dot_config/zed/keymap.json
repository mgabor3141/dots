// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
  {
    "context": "Editor",
    "bindings": {
      "secondary-space": "editor::ShowCompletions",
      "secondary-shift-space": "editor::ShowWordCompletions"
    }
  },
  {
    // `|| Editor` ensures that this takes precedence
    "context": "Workspace || Editor",
    "bindings": {
      "secondary-e": ["file_finder::Toggle", { "separate_history": true }]
    }
  },
  {
    "context": "BufferSearchBar",
    "bindings": {
      "secondary-h": "search::ToggleReplace"
    }
  },
  {
    "context": "Pane",
    "bindings": {
      "secondary-h": "search::ToggleReplace"
    }
  },
  {
    "context": "(Editor && mode == full)",
    "bindings": {
      "secondary-h": "buffer_search::DeployReplace"
    }
  },
  {
    "context": "Workspace",
    "bindings": {
      "secondary-`": "terminal_panel::Toggle"
    }
  },
  {
    "context": "Terminal",
    "bindings": {
      "secondary-shift-delete": "terminal::Clear"
    }
  },
  {
    "context": "(Terminal && selection)",
    "bindings": {
      "secondary-c": "terminal::Copy"
    }
  },
  {
    "context": "(Terminal && !selection)",
    "bindings": {
      "secondary-c": ["terminal::SendKeystroke", "ctrl-c"]
    }
  }
]
