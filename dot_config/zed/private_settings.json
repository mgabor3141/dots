// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "redact_private_values": true,
  "use_system_prompts": false,
  "buffer_line_height": "comfortable",
  "buffer_font_weight": 450.0,
  "buffer_font_family": "Fira Code",
  "buffer_font_features": {
    "cv02": true,
    "ss01": true,
    "ss03": true
  },
  "indent_guides": {
    "background_coloring": "disabled",
    "coloring": "indent_aware",
    "active_line_width": 8,
    "line_width": 4
  },
  "minimap": {
    "show": "auto"
  },
  "drag_and_drop_selection": {
    "delay": 0
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "terminal": {
    "font_size": 13,
    "font_family": "Fira Code",
    "font_weight": 450.0,
    "keep_selection_on_copy": false,
    "cursor_shape": "bar",
    "font_features": {
      "liga": true,
      "calt": true,
      "cv02": true,
      "ss01": true,
      "ss03": true
    },
    "line_height": { "custom": 1.2 },
    "toolbar": {
      "breadcrumbs": true
    }
  },
  "soft_wrap": "editor_width",
  "agent": {
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "model_parameters": []
  },
  "buffer_font_size": 14.0,
  "theme": {
    "mode": "system",
    "light": "Ayu Mirage",
    "dark": "Ayu Mirage"
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "delay_ms": 0,
      "padding": 7,
      "min_column": 0,
      "show_commit_summary": false
    }
  },
  "auto_indent_on_paste": true,
  "use_on_type_format": true,
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "inlay_hints": {
    "enabled": true,
    "show_value_hints": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": {
      "control": false,
      "alt": false,
      "shift": false,
      "platform": false,
      "function": false
    }
  },
  "tabs": {
    // Show git status colors in the editor tabs.
    "git_status": true,
    "file_icons": true
  },
  "preview_tabs": {
    // Whether preview tabs should be enabled.
    // Preview tabs allow you to open files in preview mode, where they close automatically
    // when you switch to another file unless you explicitly pin them.
    // This is useful for quickly viewing files without cluttering your workspace.
    "enabled": true,
    // Whether to open tabs in preview mode when selected from the file finder.
    "enable_preview_from_file_finder": true,
    // Whether a preview tab gets replaced when code navigation is used to navigate away from the tab.
    "enable_preview_from_code_navigation": true
  },
  "auto_install_extensions": {
    "html": true,
    "toml": true,
    "dockerfile": true,
    "git-firefly": true,
    "fish": true,
    "make": true,
    "docker-compose": true,
    "csv": true
  }
}
