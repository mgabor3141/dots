// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent_servers": {
    "opencode": {
      "type": "extension",
      "favorite_models": [
        "github-copilot/claude-sonnet-4.5",
        "github-copilot/gpt-5.2-codex",
        "github-copilot/claude-opus-4.5"
      ],
      "default_config_options": {},
      "favorite_config_option_values": {}
    }
  },
  "git_panel": {
    "tree_view": true,
    "sort_by_path": true
  },
  "base_keymap": "None",
  "helix_mode": false,
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "prettier": {
    "allowed": true
  },
  "project_panel": {
    "hide_root": true
  },
  "resize_all_panels_in_dock": [],
  "seed_search_query_from_cursor": "selection",
  "use_system_path_prompts": false,
  "title_bar": {
    "show_sign_in": false,
    "show_user_picture": false,
    "show_branch_name": false
  },
  "close_on_file_delete": true,
  "use_smartcase_search": true,
  "redact_private_values": true,
  "inline_code_actions": false,
  "use_system_prompts": false,
  "diagnostics_max_severity": "info",
  "scrollbar": {
    "diagnostics": "warning"
  },
  "colorize_brackets": true,
  "buffer_line_height": "comfortable",
  "buffer_font_weight": 450.0,
  "buffer_font_family": "Fira Code",
  "buffer_font_features": {
    "cv02": true,
    "ss01": true,
    "ss03": true
  },
  "indent_guides": {
    "background_coloring": "disabled",
    "coloring": "indent_aware",
    "active_line_width": 8,
    "line_width": 4
  },
  "minimap": {
    "show": "never"
  },
  // "experimental.theme_overrides": {
  //   "title_bar.inactive_background": "#003337ff",
  //   "title_bar.background": "#003337ff"
  // },
  "drag_and_drop_selection": {
    "delay": 0
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 1000
    }
  },
  "terminal": {
    "font_size": 13,
    "font_family": "Fira Code",
    "font_weight": 450.0,
    "keep_selection_on_copy": false,
    "cursor_shape": "bar",
    "font_features": {
      "liga": true,
      "calt": true,
      "cv02": true,
      "ss01": true,
      "ss03": true
    },
    "line_height": { "custom": 1.2 },
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "soft_wrap": "editor_width",
  "agent": {
    "expand_terminal_card": false,
    "expand_edit_card": false,
    "play_sound_when_agent_done": true,
    "always_allow_tool_actions": true,
    "default_profile": "write",
    "model_parameters": []
  },
  "buffer_font_size": 14.0,
  "theme": {
    "mode": "system",
    "light": "Ayu Mirage",
    "dark": "Ayu Mirage"
  },
  "git": {
    "blame": {
      "show_avatar": false
    },
    "inline_blame": {
      "enabled": true,
      "delay_ms": 0,
      "padding": 7,
      "min_column": 0,
      "show_commit_summary": true
    }
  },
  "auto_indent_on_paste": true,
  "use_on_type_format": true,
  "ui_font_size": 16,
  "inlay_hints": {
    "enabled": false,
    "show_value_hints": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "show_background": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": {
      "control": false,
      "alt": true,
      "shift": true,
      "platform": false,
      "function": false
    }
  },
  "tab_bar": {
    "show_nav_history_buttons": false,
    "show_tab_bar_buttons": false
  },
  "tabs": {
    // Show git status colors in the editor tabs.
    "file_icons": true,
    "git_status": true
  },
  "max_tabs": 8,
  "preview_tabs": {
    // Whether preview tabs should be enabled.
    // Preview tabs allow you to open files in preview mode, where they close automatically
    // when you switch to another file unless you explicitly pin them.
    // This is useful for quickly viewing files without cluttering your workspace.
    "enabled": true,
    // Whether to open tabs in preview mode when selected from the file finder.
    "enable_preview_from_file_finder": true,
    // Whether a preview tab gets reused when code navigation is used to navigate away from the tab.
    "enable_keep_preview_on_code_navigation": true
  },

  // Profiles
  "profiles": {
    "Minimal": {
      "status_bar": {
        "experimental.show": false
      },
      "toolbar": {
        "agent_review": false,
        "breadcrumbs": false,
        "code_actions": false,
        "quick_actions": false,
        "selections_menu": false
      }
    }
  },

  // Language specific
  "auto_install_extensions": {
    "html": true,
    "toml": true,
    "dockerfile": true,
    "git-firefly": true,
    "fish": true,
    "make": true,
    "docker-compose": true,
    "csv": true
  },
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    }
  },
  "lsp": {
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": ["import/order"]
        }
      }
    },
    "json-language-server": {
      "settings": {
        "json": {
          "schemas": [
            {
              "fileMatch": ["*.jsonc", "*.json.tmpl"],
              "schema": {
                "allowTrailingCommas": true
              }
            }
          ]
        }
      }
    }
  }
}
