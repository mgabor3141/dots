// chezmoi:template:left-delimiter="/*#" right-delimiter="*/"
// chezmoi:modify-template
// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  /*#- includeTemplate "pick" (dict
    "stdin" .chezmoi.stdin
    "jq" `.agent | { ssh_connections, agent_servers }`
  ) */
  "agent": {
    /*#- indent 2 (includeTemplate "pick" (dict
      "stdin" .chezmoi.stdin
      "jq" `.agent | { default_model, favorite_models }`)
    ) */
    "tool_permissions": {
      "default": "allow"
    },
    "expand_terminal_card": false,
    "expand_edit_card": false,
    "play_sound_when_agent_done": true,
    "default_profile": "write",
    "model_parameters": []
  },
  "bottom_dock_layout": "left_aligned",
  "calls": {
    "mute_on_join": true
  },
  "window_decorations": "server",
  "file_finder": {
    "modal_max_width": "medium"
  },
  "diagnostics": {
    "inline": {
      "min_column": 32,
      "enabled": true
    }
  },
  "go_to_definition_fallback": "none",
  "middle_click_paste": false,
  "completions": {
    "lsp_insert_mode": "replace_subsequence",
    "words": "disabled"
  },
  "sticky_scroll": {
    "enabled": true
  },
  "which_key": {
    "enabled": true
  },
  "on_last_window_closed": "quit_app",
  "when_closing_with_no_tabs": "keep_window_open",
  "git_panel": {
    "tree_view": true,
    "sort_by_path": true,
    "scrollbar": {
      "show": "never"
    }
  },
  "base_keymap": "None",
  "helix_mode": false,
  "vim": {
    "toggle_relative_line_numbers": true
  },
  "project_panel": {
    "auto_reveal_entries": false,
    "indent_size": 16.0,
    "folder_icons": false,
    "file_icons": true,
    "entry_spacing": "standard",
    "hide_root": true,
    "scrollbar": {
      "show": "never"
    }
  },
  "resize_all_panels_in_dock": [],
  "seed_search_query_from_cursor": "selection",
  "use_system_path_prompts": false,
  "title_bar": {
    "show_sign_in": false,
    "show_user_picture": false,
    "show_branch_name": false
  },
  "close_on_file_delete": true,
  "use_smartcase_search": true,
  "redact_private_values": false,
  "inline_code_actions": false,
  "use_system_prompts": false,
  "diagnostics_max_severity": "info",
  "scrollbar": {
    "selected_symbol": false,
    "selected_text": false,
    "diagnostics": "warning"
  },
  "colorize_brackets": true,
  "buffer_line_height": "comfortable",
  "buffer_font_weight": 450.0,
  "buffer_font_family": "Fira Code",
  "buffer_font_features": {
    "cv02": true,
    "ss01": true,
    "ss03": true
  },
  "indent_guides": {
    "background_coloring": "disabled",
    "coloring": "indent_aware",
    "active_line_width": 8,
    "line_width": 4
  },
  "minimap": {
    "show": "never"
  },
  // "experimental.theme_overrides": {
  //   "title_bar.inactive_background": "#003337ff",
  //   "title_bar.background": "#003337ff"
  // },
  "drag_and_drop_selection": {
    "delay": 0
  },
  "autosave": {
    "after_delay": {
      "milliseconds": 500
    }
  },
  "terminal": {
    "scrollbar": {
      "show": "never"
    },
    "max_scroll_history_lines": 100000,
    "dock": "right",
    "font_size": 13,
    "font_family": "Fira Code",
    "font_weight": 450.0,
    "keep_selection_on_copy": false,
    "cursor_shape": "bar",
    "font_features": {
      "liga": true,
      "calt": true,
      "cv02": true,
      "ss01": true,
      "ss03": true
    },
    "line_height": { "custom": 1.2 },
    "toolbar": {
      "breadcrumbs": false
    },
    "env": {
      "fish_mouse_enable": "1"
    }
  },
  "soft_wrap": "editor_width",
  "buffer_font_size": 14.0,
  "theme": {
    "mode": "system",
    "light": "Ayu Mirage",
    "dark": "Ayu Mirage"
  },
  "git": {
    "path_style": "file_path_first",
    "hunk_style": "unstaged_hollow",
    "blame": {
      "show_avatar": true
    },
    "inline_blame": {
      "enabled": true,
      "delay_ms": 0,
      "padding": 7,
      "min_column": 32,
      "show_commit_summary": true
    }
  },
  "auto_indent_on_paste": true,
  "tab_size": 2,
  "use_on_type_format": true,
  "ui_font_size": 16,
  "inlay_hints": {
    "enabled": true,
    "show_value_hints": true,
    "show_type_hints": false,
    "show_parameter_hints": false,
    "show_other_hints": false,
    "show_background": false,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50,
    "toggle_on_modifiers_press": {
      "control": false,
      "alt": true,
      "shift": true,
      "platform": false,
      "function": false
    }
  },
  "tab_bar": {
    "show_pinned_tabs_in_separate_row": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    // Show git status colors in the editor tabs.
    "file_icons": true,
    "git_status": true,
    "show_close_button": "hidden"
  },
  "max_tabs": 8,
  "preview_tabs": {
    "enabled": true,
    "enable_preview_from_file_finder": true,
    "enable_keep_preview_on_code_navigation": false,
    "enable_preview_multibuffer_from_code_navigation": true
  },

  // Profiles
  "profiles": {
    "Minimal": {
      "status_bar": {
        "experimental.show": false
      },
      "toolbar": {
        "agent_review": false,
        "breadcrumbs": false,
        "code_actions": false,
        "quick_actions": false,
        "selections_menu": false
      }
    }
  },

  // Language specific
  "auto_install_extensions": {
    "html": true,
    "toml": true,
    "dockerfile": true,
    "git-firefly": true,
    "fish": true,
    "make": true,
    "docker-compose": true,
    "csv": true
  },
  "languages": {
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "prettier": {
        "allowed": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      },
      "prettier": {
        "allowed": true
      }
    }
  },
  "lsp": {
    "vtsls": {
      "settings": {
        "typescript": {
          "updateImportsOnFileMove": {
            "enabled": "always"
          }
        },
        "javascript": {
          "updateImportsOnFileMove": {
            "enabled": "always"
          }
        }
      },
      "enable_lsp_tasks": true
    },
    "eslint": {
      "settings": {
        "codeActionOnSave": {
          "rules": ["import/order"],
          "rulesCustomizations": [
            // set all eslint errors/warnings to show as warnings
            { "rule": "*", "severity": "warn" }
          ]
        }
      }
    },
    "json-language-server": {
      "settings": {
        "json": {
          "schemas": [
            {
              "fileMatch": ["**/zed/*settings.json*"],
              "schema": {
                "allowComments": true
              }
            }
          ]
        }
      }
    },
    "biome": {
      "settings": {
        "require_config_file": true
      }
    }
  }
}
